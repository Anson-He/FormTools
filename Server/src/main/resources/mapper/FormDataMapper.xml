<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.formtools.mapper.FormDataMapper">

    <resultMap type="FormData" id="FormDataResult">
        <id property="userId" column="user_id"/>
        <result property="fillInfo" column="fill_info"/>
        <result property="fillTime" column="fill_time"/>
        <result property="alterTime" column="alter_time"/>
    </resultMap>

    <select id="getFormData" resultMap="FormDataResult">
        select * from ${formId} where user_id=#{userId}
    </select>

    <select id="findAllFormData" parameterType="String" resultMap="FormDataResult">
        select * from ${formId}
    </select>

    <update id="updateFormData">
        update ${formId}
        <set>
            <if test="formData.fillInfo!=null">
                fill_info=#{formData.fillInfo},
            </if>
            <if test="formData.alterTime!=null">
                alter_time=#{formData.alterTime},
            </if>
        </set>
        where user_id=#{formData.userId}
    </update>
</mapper> 